// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

// User model with auth fields
model User {
  id        Int       @id @default(autoincrement())
  username  String
  email     String    @unique
  password  String?   // nullable for Google-only users
  googleId  String?   @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  
  // Relations
  expenses  Expense[]
  incomes   Income[]
  transactions Transactions[]
  budgets  Budget[]
}

model Expense {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  amount    Float
  category  String
  remark    String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  
  @@index([userId])
}

model Income {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  amount    Float
  source    String
  remark    String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  
  @@index([userId])
}
model Transactions {
  id              Int      @id @default(autoincrement())

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           Int      @default(1)

  remarks          String?
  amountPlus       Float    @default(0)
  amountMinus      Float    @default(0)
  balance          Float

  // AI prediction
  predicted        Int?
  predictedLabel   String?

  // User correction
  corrected        Int?
  correctedLabel   String?

  confidence       Float?

  source           String   @default("AI") // AI | MANUAL
  uploadMonth      String?
  createdAt        DateTime @default(now())

  usedForTraining Boolean @default(false)

  @@index([userId])
  @@index([userId, uploadMonth])
  @@index([usedForTraining])
}
model Budget {
  id        Int      @id @default(autoincrement())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  
  category  String   
  
  // Target amount for this category
  targetAmount Float
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, category])
  @@index([userId])
}

model RetrainingJob {
  id                  String   @id @default(cuid())
  status              String   @default("pending")
  totalCorrections    Int
  trainSamples        Int?
  valSamples          Int?
  bestValAccuracy     Float?
  epochs              Int      @default(8)
  learningRate        Float    @default(0.00002)
  errorMessage        String?
  startedAt           DateTime?
  completedAt         DateTime?
  createdAt           DateTime @default(now())
  
  @@index([status])
}