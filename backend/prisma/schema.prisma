// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

// User model with auth fields
model User {
  id        Int       @id @default(autoincrement())
  username  String
  email     String    @unique
  password  String?   // nullable for Google-only users
  googleId  String?   @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relations
  expenses  Expense[]
  incomes   Income[]
}

model Expense {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  amount    Float
  category  String
  remark    String?
  date      DateTime @default(now())
  
  @@index([userId])
}

model Income {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  amount    Float
  source    String
  remark    String?
  date      DateTime @default(now())
  
  @@index([userId])
}
model Transactions {
  id            Int      @id @default(autoincrement())
  remarks       String?
  amountPlus    Float
  amountMinus   Float
  balance       Float

  // AI LABELING FIELDS
  // AI prediction
  predicted        Int?
  predictedLabel   String?

  // User correction (optional)
  corrected        Int?
  correctedLabel   String?

  // Confidence score from model
  confidence       Float?

  createdAt        DateTime @default(now())
}

// FEEDBACK (optional historical log)
model Feedback {
  id          String   @id @default(cuid())
  text        String
  predicted   Int
  corrected   Int
  confidence  Float
  createdAt   DateTime @default(now())
}
